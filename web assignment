    </div>


    <!-- -------------------- QUESTION 2 -------------------- -->
    <div class="calculator">
        <h2>Q2: Calculator</h2>

        <input type="text" id="result" readonly><br>

        <button onclick="clearResult()">AC</button>
        <button onclick="deleteLast()">DEL</button>
        <button onclick="appendValue('%')">%</button>
        <button onclick="appendValue('/')">/</button><br>

        <button onclick="appendValue('7')">7</button>
        <button onclick="appendValue('8')">8</button>
        <button onclick="appendValue('9')">9</button>
        <button onclick="appendValue('*')">*</button><br>

        <button onclick="appendValue('4')">4</button>
        <button onclick="appendValue('5')">5</button>
        <button onclick="appendValue('6')">6</button>
        <button onclick="appendValue('-')">-</button><br>

        <button onclick="appendValue('1')">1</button>
        <button onclick="appendValue('2')">2</button>
        <button onclick="appendValue('3')">3</button>
        <button onclick="appendValue('+')">+</button><br>

        <button onclick="appendValue('0')">0</button>
        <button class="equal" onclick="calculate()">=</button>
    </div>


    <!-- -------------------- QUESTION 3 -------------------- -->
    <div class="box">
        <h2>Q3: To-Do List</h2>

        <input type="text" id="todoInput" placeholder="Enter task">
        <button onclick="addTodo()">Add</button>

        <ul id="todoList"></ul>
    </div>


    <!-- -------------------- QUESTION 4 -------------------- -->
    <div class="box">
        <h2>Q4: Random Number Generator</h2>
        <button onclick="generateRandom()">Generate</button>
        <p id="randomOutput"></p>
    </div>


    <!-- -------------------- QUESTION 5 -------------------- -->
    <div class="box">
        <h2>Q5: Temperature Converter</h2>

        Celsius: <input type="number" id="celsius"><br><br>
        Fahrenheit: <input type="number" id="fahrenheit"><br><br>

        <button onclick="convertTemp()">Convert</button>
    </div>


    <!-- -------------------- QUESTION 6 -------------------- -->
    <div class="box">
        <h2>Q6: Palindrome Checker</h2>

        <input type="text" id="palInput" placeholder="Enter word">
        <button onclick="checkPalindrome()">Check</button>

        <p id="palResult"></p>
    </div>


    <!-- -------------------- QUESTION 7 -------------------- -->
    <div class="box">
        <h2>Q7: Timer</h2>

        <div id="timerDisplay">0</div><br>

        <button onclick="startTimer()">Start</button>
        <button onclick="stopTimer()">Stop</button>
    </div>


    <!-- -------------------- QUESTION 8 -------------------- -->
    <div class="box">
        <h2>Q8: Dropdown Menu</h2>

        <select id="dropdown">
            <option value="Apple">Apple</option>
            <option value="Orange">Orange</option>
            <option value="Mango">Mango</option>
        </select>

        <button onclick="showSelected()">Show Selected</button>

        <p id="dropdownResult"></p>
    </div>


    <!-- -------------------- JAVASCRIPT -------------------- -->
    <script>
        /* ---------- Calculator (Q2) ---------- */
        function appendValue(val) {
            document.getElementById("result").value += val;
        }

        function clearResult() {
            document.getElementById("result").value = "";
        }

        function deleteLast() {
            let x = document.getElementById("result").value;
            document.getElementById("result").value = x.slice(0, -1);
        }

        function calculate() {
            try {
                document.getElementById("result").value =
                    eval(document.getElementById("result").value);
            } catch {
                alert("Invalid Expression");
            }
        }

        /* ---------- To-Do List (Q3) ---------- */
        function addTodo() {
            let item = document.getElementById("todoInput").value;

            if (item === "") return;

            let li = document.createElement("li");
            li.textContent = item;

            document.getElementById("todoList").appendChild(li);
            document.getElementById("todoInput").value = "";
        }

        /* ---------- Random Number (Q4) ---------- */
        function generateRandom() {
            let num = Math.floor(Math.random() * 100) + 1;
            document.getElementById("randomOutput").textContent = "Random Number: " + num;
        }

        /* ---------- Temperature Converter (Q5) ---------- */
        function convertTemp() {
            let c = document.getElementById("celsius").value;
            let f = document.getElementById("fahrenheit").value;

            if (c !== "") {
                document.getElementById("fahrenheit").value = (c * 9 / 5) + 32;
            } else if (f !== "") {
                document.getElementById("celsius").value = (f - 32) * 5 / 9;
            }
        }

        /* ---------- Palindrome Checker (Q6) ---------- */
        function checkPalindrome() {
            let text = document.getElementById("palInput").value.toLowerCase();
            let reversed = text.split("").reverse().join("");

            document.getElementById("palResult").textContent =
                text === reversed ? "It is a Palindrome ✔" : "Not a Palindrome ✘";
        }

        /* ---------- Timer (Q7) ---------- */
        let timer = null;
        let count = 0;

        function startTimer() {
            if (timer) return;
            timer = setInterval(() => {
                count++;
                document.getElementById("timerDisplay").textContent = count;
            }, 1000);
        }

        function stopTimer() {
            clearInterval(timer);
            timer = null;
        }

        /* ---------- Dropdown (Q8) ---------- */
        function showSelected() {
            let value = document.getElementById("dropdown").value;
            document.getElementById("dropdownResult").textContent = "Selected: " + value;
        }
    </script>
</body>

